<div class="header-wrapper">
    <h2>Book list</h2>
    <a href="{{ path('add_book') }}" class="btn btn-primary button-loading">Add book</a>
</div>
<div class='table-responsive'>
    <table id='task-list' class='table table-striped table-bordered'>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Pages</th>
            <th>Created At</th>
            <th>Published</th>
            <th>Edit</th>
            <th>Delete</th>

        </tr>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>
                    <ul>
                        {% for author in book.authors %}
                            <li>{{ author.name }} from {{ author.country }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>{{ book.publisher }}</td>
                <td>{{ book.pages }}</td>
                <td>{{ book.createdAt|date('d.m.Y') }}</td>
                <td>{{ book.isPublished > 0 ? '<i class="fas fa-check"></i>' : '<i class="fas fa-times"></i>' }}</td>
                <td>
                    <a href="{{ path('edit_book', { 'bookId': book.id }) }}" class="btn btn-primary edit-btn">Edit</a>
                </td>
                <td>
                    <a href="{{ path('delete_book', { 'bookId': book.id }) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>