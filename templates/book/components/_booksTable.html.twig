<div class="header-wrapper">
    <h2>Book list</h2>
</div>
<div class='table-responsive'>
    <table id='task-list' class='table table-striped table-bordered'>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publisher</th>
            <th>Pages</th>
            <th>Created At</th>
            <th>Published</th>
        </tr>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author.name }} from {{ book.author.name }}</td>
{#                <td>#}
{#                    <ul>#}
{#                        {% for author in book.author %}#}
{#                            <li>{{ author.name }} from {{ author.country }}</li>#}
{#                        {% endfor %}#}
{#                    </ul>#}
{#                </td>#}
                <td>{{ book.publisher }}</td>
                <td>{{ book.pages }}</td>
                <td>{{ book.createdAt|date('d.m.Y') }}</td>
                <td>{{ book.isPublished > 0 ? '<i class="fas fa-check"></i>' : '<i class="fas fa-times"></i>' }}</td>
            </tr>
        {% endfor %}
    </table>
    <script src="{{ asset('js/tasks_rest.js') }}"></script>
</div>